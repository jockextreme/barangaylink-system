# Application
NODE_ENV=development
PORT=3001
APP_NAME=BarangayLink
APP_VERSION=1.0.0

# Database
DATABASE_URL=postgresql://barangayadmin:secure_password_here@localhost:5432/barangaylink
DB_HOST=localhost
DB_PORT=5432
DB_NAME=barangaylink
DB_USER=barangayadmin
DB_PASSWORD=secure_password_here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_change_this
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@barangaylink.ph
EMAIL_FROM_NAME=BarangayLink

# File Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cloudinary (for production file storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Frontend URLs
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3000/admin
API_URL=http://localhost:3001/api
WS_URL=ws://localhost:3001

# AI Services
AI_PRIORITIZATION_URL=http://localhost:5000
AI_CHATBOT_URL=http://localhost:5001

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
SESSION_SECRET=your_session_secret_change_this

# Logging
LOG_LEVEL=info
LOG_FILE=logs/barangaylink.log

# Admin Defaults
DEFAULT_ADMIN_EMAIL=admin@barangaylink.ph
DEFAULT_ADMIN_PASSWORD=ChangeMe123

# SMS Gateway (optional)
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret
SMS_FROM_NUMBER=BarangayLink

# Google Maps API (optional)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_TRACKING_ID=UA-XXXXXXXXX-X

# Feature Flags
FEATURE_CHATBOT=true
FEATURE_AI_PRIORITIZATION=true
FEATURE_REAL_TIME_NOTIFICATIONS=true
FEATURE_EMAIL_VERIFICATION=true
